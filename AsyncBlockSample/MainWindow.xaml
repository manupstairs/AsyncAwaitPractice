<Window x:Class="AsyncBlockSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncBlockSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="buttonDelayBlock" Height="50" Click="ButtonDelayBlock_Click">Click me, but will block!</Button>
        <Button x:Name="buttonDelay" Height="50" Click="ButtonDelay_Click">Click me, no block!</Button>
        <Button x:Name="buttonDelay2" Height="50" Click="ButtonDelay2_Click">Another way, no block!</Button>
        <Button x:Name="buttonDelay3" Height="50" Click="ButtonDelay3_Click">No block and go back to UI</Button>
    </StackPanel>
</Window>
